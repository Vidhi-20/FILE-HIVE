<%- include ("includes/header", { "title" : "My shared links" }) %>

    <div class="container"
        style="margin-top: 50px; margin-bottom: 50px; background-image: linear-gradient(to bottom, #f5efe6, #e8dfca); border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <%- include ("includes/ResponseAlert", { "request" : request }) %>

            <div class="row">
                <div class="col-md-12">
                    <h1
                        style="font-size: 30px; font-weight: bold; color: #333; text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);">
                        My shared links</h1>
                </div>
            </div>

            <div class="row">
                <% links.forEach(function (link) { const singleFile=link.file; %>
                    <div class="col-md-4" style="margin-top: 30px;">

                        <div class="card"
                            style="border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                            <div class="card-body" style="font-size: 15px; text-align: center;  height: 250px;">
                                
                            </div>

                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h5>
                                            <%= singleFile.name %>
                                        </h5>
                                    </div>
                                </div>

                                <form method="POST" action="<%= request.mainURL %>/DeleteLink"
                                    onsubmit="return confirm('Are you sure you want to delete this link?');">
                                    <input type="hidden" name="_id" value="<%= link._id %>" required />
                                    <input type="submit" class="btn btn-danger" value="Delete" />
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

    </div>

    <%- include ("includes/footer") %>